{
  "compilerOptions": {
    "module": "commonjs",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "lib": ["es2017", "dom"],
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
