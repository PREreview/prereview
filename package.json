{
  "name": "prereview",
  "version": "0.1.0",
  "description": "A platform for reviewing preprints.",
  "license": "AGPL-3.0-or-later",
  "contributors": [
    "Harum Helmy <harum@throneless.tech",
    "Josh King <josh@throneless.tech",
    "Rae Gaines <rae@throneless.tech"
  ],
  "keywords": [
    "preprint",
    "orcid",
    "doi"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/throneless-tech/prereview.git"
  },
  "bugs": {
    "url": "https://github.com/throneless-tech/prereview/issues"
  },
  "homepage": "https://github.com/throneless-tech/prereview#readme",
  "bin": {
    "prereview": "./dist/backend/index.js"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --fix ./src",
    "test": "jest --coverage --forceExit",
    "doc": "jsdoc -d ./dist/doc/ -r ./src/backend ./src/frontend",
    "build": "rimraf dist && npm run build:backend && npm run build:frontend",
    "build:dev": "rimraf dist && npm run build:backend:dev && npm run build:frontend:dev",
    "build:backend": "parcel build --target=backend src/backend/index.js",
    "build:backend:dev": "parcel build --target=backend --no-minify src/backend/index.js",
    "build:frontend": "parcel build --target=frontend src/frontend/index.html",
    "build:frontend:dev": "parcel build --target=frontend --no-minify src/frontend/index.html",
    "db": "mikro-orm",
    "start:backend": "npm run build && node dist/backend/index.js",
    "start": "npm run start:backend",
    "start:dev": "parcel serve src/frontend/index.html"
  },
  "backend": "dist/backend/index.js",
  "frontend": "dist/frontend/index.html",
  "targets": {
    "backend": {
      "context": "node",
      "distDir": "dist/backend"
    },
    "frontend": {
      "context": "browser",
      "distDir": "dist/frontend"
    }
  },
  "engines": {
    "node": ">=14.0"
  },
  "browserslist": {
    "production": [
      "last 3 chrome versions",
      "last 3 firefox versions",
      "last 3 safari versions"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@koa/cors": "2.2.3",
    "@koa/router": "^8.0.6",
    "@material-ui/core": "^4.9.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/pickers": "^3.2.10",
    "@material-ui/styles": "^4.9.0",
    "@mikro-orm/core": "^4.2.1",
    "@mikro-orm/postgresql": "^4.2.1",
    "@mikro-orm/reflection": "^4.2.1",
    "@mikro-orm/sqlite": "^4.2.1",
    "@reach/combobox": "^0.10.5",
    "@reach/dialog": "^0.10.5",
    "@reach/menu-button": "^0.10.5",
    "@reach/tooltip": "^0.10.5",
    "@reach/visually-hidden": "^0.10.4",
    "@sendgrid/mail": "^7.2.1",
    "@storybook/addon-actions": "^5.3.19",
    "bcryptjs": "^2.4.3",
    "classnames": "^2.2.6",
    "clipboard-copy": "^3.1.0",
    "combined-stream": "^1.0.8",
    "commander": "^5.1.0",
    "date-fns": "^2.14.0",
    "doi-regex": "^0.1.10",
    "dotenv": "8.0.0",
    "faker": "^4.1.0",
    "figlet": "^1.3.0",
    "identifiers-arxiv": "^0.1.1",
    "ioredis": "^4.14.1",
    "is-mobile": "^2.2.2",
    "is-url": "^1.2.4",
    "joi": "^17.1.1",
    "jsdom": "^16.3.0",
    "jwks-rsa": "^1.6.2",
    "knex": "^0.21.2",
    "knex-migrate": "^1.7.4",
    "koa": "2.7.0",
    "koa-better-error-handler": "^3.0.5",
    "koa-body": "^4.1.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "3.0.0",
    "koa-error": "^3.2.0",
    "koa-helmet": "4.1.0",
    "koa-http-request": "^2.2.1",
    "koa-joi-router": "^6.0.2",
    "koa-jwt": "^3.6.0",
    "koa-log4": "^2.3.2",
    "koa-logger": "3.2.0",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.3",
    "koa-session": "^5.13.1",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.19",
    "log4js": "^6.3.0",
    "lru-cache": "^6.0.0",
    "match-sorter": "^4.2.0",
    "moment": "^2.27.0",
    "node-fetch": "^2.6.1",
    "orcid-utils": "^1.0.4",
    "passport-local": "^1.0.0",
    "passport-orcid": "0.0.4",
    "passport-strategy": "^1.0.0",
    "pg": "^8.3.0",
    "pg-range": "^1.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-avatar-editor": "^11.0.9",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "react-dnd-touch-backend": "^11.1.3",
    "react-dom": "^16.12.0",
    "react-dropzone": "^11.0.2",
    "react-helmet-async": "^1.0.6",
    "react-icons": "^3.10.0",
    "react-imported-component": "^6.2.1",
    "react-pdf": "^4.1.0",
    "react-prerendered-component": "^1.2.4",
    "react-router-dom": "^5.1.2",
    "request-promise-native": "^1.0.8",
    "smoothscroll-polyfill": "^0.4.4",
    "socket.io-client": "^2.3.0",
    "sqlite3": "^5.0.0",
    "url": "^0.11.0",
    "url-search-params-polyfill": "^8.1.0",
    "uuid": "^3.3.2",
    "xmldom": "^0.3.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@mikro-orm/cli": "^4.2.3",
    "@parcel/transformer-typescript-tsc": "^2.0.0-nightly.432",
    "@parcel/validator-typescript": "^2.0.0-alpha.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "acorn-jsx": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "22.5.1",
    "eslint-plugin-node": "9.0.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-react": "^7.18.0",
    "husky": "2.3.0",
    "jest": "^25.1.0",
    "jsdoc": "^3.6.3",
    "nodemon": "^2.0.2",
    "parcel": "^2.0.0-nightly.426",
    "prettier": "1.17.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.10",
    "supertest": "^4.0.2",
    "supertest-session": "^4.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./.jest/env.js"
    ],
    "modulePathIgnorePatterns": [
      "./src/frontend/data"
    ]
  },
  "babel": {
    "presets": [
      "@parcel/babel-preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      [
        "@babel/plugin-transform-react-jsx"
      ]
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/backend/mikro-orm.config.ts",
      "./dist/backend/mikro-orm.config.js"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:jest/recommended",
      "plugin:node/recommended-module",
      "plugin:prettier/recommended",
      "plugin:promise/recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "es2017": true,
      "browser": true,
      "node": true,
      "jest/globals": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "sourceType": "module",
          "project": "./tsconfig.json"
        },
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "prettier/@typescript-eslint"
        ]
      }
    ],
    "rules": {
      "node/no-extraneous-import": [
        "error",
        {
          "allowModules": [
            "lodash"
          ]
        }
      ],
      "node/shebang": [
        "error",
        {
          "convertPath": {
            "src/**/*.js": [
              "^src/(.+?)\\.js$",
              "dist/$1.js"
            ]
          }
        }
      ]
    }
  }
}
